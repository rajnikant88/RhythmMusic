<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/player1"
    android:orientation="vertical"
    tools:context=".AudioPlayer">

    <TextView
        android:id="@+id/tsong"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="demo"
        android:textAlignment="center"
        android:textColor="#d71640"
        android:textSize="20dp"
        android:textStyle="italic" />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:id="@+id/songiv"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
       >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/tv1"
            android:text="00:00"
            android:textAlignment="center"
            android:textColor="#64df8d"/>
        <SeekBar
            android:id="@+id/seekBar"
            android:layout_width="wrap_content"
            android:layout_weight="20"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv2"
            android:text="00:00"
            android:layout_weight="1"
            android:textAlignment="center"
            android:textColor="#64df8d"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:layout_gravity="center"
        >
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/ibackward"
            android:src="@drawable/backward1"
            android:layout_weight="1"/>
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/ipause"
            android:src="@drawable/pause1"
            android:layout_weight="1"/>
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/iplay"
            android:src="@drawable/play1"
            android:layout_weight="1"/>
       <ImageView
           android:layout_width="80dp"
           android:layout_height="80dp"
           android:id="@+id/istop"
           android:src="@drawable/stop1"
           android:layout_weight="1"/>
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/iforward"
            android:src="@drawable/forward1"
            android:layout_weight="1"/>


    </LinearLayout>

</LinearLayout>